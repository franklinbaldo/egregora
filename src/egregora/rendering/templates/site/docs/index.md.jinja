---
hide:
  - navigation
  - toc
---
<div class="homepage-hero">
  <div class="hero-content">
    <h1 class="hero-title">{{ site_name }}</h1>
    <p class="hero-subtitle">Your conversations, transformed into connected stories</p>
    {% if stats %}
    <div class="hero-stats">
      <div class="stat-item">
        <span class="stat-number">{{ stats.post_count }}</span>
        <span class="stat-label">Posts</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">{{ stats.profile_count }}</span>
        <span class="stat-label">Contributors</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">{{ stats.media_count }}</span>
        <span class="stat-label">Media</span>
      </div>
    </div>
    {% endif %}
  </div>
</div>

{% if posts %}
<div class="homepage-section">
  <div class="section-header">
    <h2>Latest Stories</h2>
    <a href="{{ blog_dir }}/" class="view-all-link">View all posts ‚Üí</a>
  </div>

  <!-- Featured Post (First/Latest) -->
  {% set featured = posts[0] %}
  <div class="featured-post">
    {% if featured.banner %}
    <div class="featured-banner">
      <img src="{{ featured.banner }}" alt="{{ featured.title }}" loading="eager">
    </div>
    {% endif %}
    <div class="featured-content">
      <div class="featured-meta">
        {% if featured.authors %}
        <div class="post-authors">
          {% for author in featured.authors %}
          <img src="{{ author.avatar }}" alt="{{ author.name }}" class="author-avatar-small" title="{{ author.name }}">
          {% endfor %}
        </div>
        {% endif %}
        <span class="post-date">{{ featured.date }}</span>
        <span class="post-reading-time">{{ featured.reading_time }} min read</span>
      </div>
      <h3 class="featured-title">
        <a href="{{ featured.url }}">{{ featured.title }}</a>
      </h3>
      <p class="featured-summary">{{ featured.summary }}</p>
      {% if featured.tags %}
      <div class="post-tags-inline">
        {% for tag in featured.tags[:3] %}
        <span class="tag-pill">{{ tag }}</span>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>

  <!-- Recent Posts Grid -->
  {% if posts|length > 1 %}
  <div class="posts-grid">
    {% for post in posts[1:] %}
    <article class="post-card-modern">
      {% if post.banner %}
      <div class="post-card-image">
        <a href="{{ post.url }}">
          <img src="{{ post.banner }}" alt="{{ post.title }}" loading="lazy">
        </a>
      </div>
      {% endif %}
      <div class="post-card-content">
        <div class="post-card-meta">
          {% if post.authors %}
          <div class="post-authors-small">
            {% for author in post.authors[:2] %}
            <img src="{{ author.avatar }}" alt="{{ author.name }}" class="author-avatar-tiny" title="{{ author.name }}">
            {% endfor %}
          </div>
          {% endif %}
          <span class="post-date-small">{{ post.date }}</span>
        </div>
        <h3 class="post-card-title">
          <a href="{{ post.url }}">{{ post.title }}</a>
        </h3>
        <p class="post-card-summary">{{ post.summary | truncate(120) }}</p>
        <div class="post-card-footer">
          <span class="reading-time-small">üìñ {{ post.reading_time }} min</span>
          {% if post.tags %}
          <div class="tags-compact">
            {% for tag in post.tags[:2] %}
            <span class="tag-pill-small">{{ tag }}</span>
            {% endfor %}
          </div>
          {% endif %}
        </div>
      </div>
    </article>
    {% endfor %}
  </div>
  {% endif %}
</div>
{% else %}
<div class="empty-state-card">
  <div class="empty-state-icon">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M12 20h9"/>
      <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/>
    </svg>
  </div>
  <h2>Welcome to Egregora</h2>
  <p>This archive is currently empty. Start transforming your conversations into connected stories.</p>

  <div class="command-block">
    <span class="command-label">Generate your first post</span>
    <div class="command-wrapper">
      <code>egregora write path/to/chat_export.zip</code>
    </div>
  </div>

  <p><small>Use <code>egregora write --help</code> to see all available options.<br>Once you generate content, your latest stories will appear here automatically.</small></p>
</div>
{% endif %}

<!-- Top Rated Posts by ELO -->
