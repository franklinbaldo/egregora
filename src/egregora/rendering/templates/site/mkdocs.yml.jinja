site_name: {{ site_name }}
site_description: Collective consciousness journal - {{ site_name }}
site_url: {{ site_url | default("http://127.0.0.1:8000") }}  # Update with your deployment URL (e.g., https://example.com)
# When using multiple sites from a shared repo, give each site its own mkdocs.yml via sites.<name>.output.adapters[*].config_path
# repo_url: https://github.com/your-user/your-repo  # Uncomment to enable 'Edit on GitHub'
# repo_name: your-repo
docs_dir: ../{{ docs_dir }}
site_dir: {{ site_dir | default("site") }}  # Set per-site to avoid build collisions in multi-site configs
use_directory_urls: true
copyright: Copyright &copy; {{ now.year }} {{ site_name }}

theme:
  name: material
  custom_dir: ../overrides
  language: en
  favicon: assets/images/favicon.svg
  font:
    text: Inter
    code: Roboto Mono
  palette:
    # Light mode
    - media: '(prefers-color-scheme: light)'
      scheme: default
      primary: custom
      accent: custom
      toggle:
        icon: material/brightness-7
        name: Switch to dark mode
    # Dark mode
    - media: '(prefers-color-scheme: dark)'
      scheme: slate
      primary: custom
      accent: custom
      toggle:
        icon: material/brightness-4
        name: Switch to light mode
  features:
    # Navigation
    - navigation.instant
    - navigation.instant.prefetch
    - navigation.instant.progress
    - navigation.tracking
    - navigation.tabs
    - navigation.tabs.sticky
    - navigation.sections
    - navigation.expand
    - navigation.path
    - navigation.prune
    - navigation.indexes
    - navigation.top
    # Search
    - search.suggest
    - search.highlight
    - search.share
    # Header
    - header.autohide
    # Content
    - content.code.copy
    - content.code.annotate
    - content.code.select
    - content.tabs.link
    - content.tooltips
    - cards
    - cards.select
    - cards.share
    - content.action.edit
    - content.action.view
    # Table of contents
    - toc.follow
  icon:
    repo: fontawesome/brands/github
    edit: material/pencil
    view: material/eye

plugins:
  - social:
      cards: true
  # - offline # Removed for privacy (leaks unpkg requests)
  - privacy
  - search:
      lang: en
      separator: '[\s\-,:!=\[\]()"`/]+|\.(?!\d)|&[lg]t;|(?!\b)(?=[A-Z][a-z])'
  - macros
  - glightbox:
      touchNavigation: true
      loop: false
      effect: zoom
      slide_effect: slide
      width: 100%
      height: auto
      zoomable: true
      draggable: true
      auto_caption: false
      caption_position: bottom
  - blog:
      blog_dir: {{ blog_dir }}
      post_dir: .
      # post_dir: . means posts are directly in {{ blog_dir }}/ (Standard Structure)
      # Post URL structure (uses date and slug)
      post_url_format: "{date}/{slug}"
      post_url_date_format: yyyy/MM/dd
      # Post excerpts (use <!-- more --> separator)
      # post_excerpt: optional
      # post_excerpt_max_authors: 1
      # post_excerpt_max_categories: 2
      # post_excerpt_separator: "<!-- more -->"
      # Pagination
      pagination_per_page: 10
      pagination_url_format: "page/{page}"
      pagination_format: "~2~"
      pagination_keep_content: true
      # Authors (automated via .authors.yml in docs root)
      authors: true
      authors_file: ../docs/.authors.yml
      # Categories
      categories: true
      # Archive
      archive: true
      archive_name: Archive
      archive_date_format: yyyy
      archive_url_date_format: yyyy/MM
      # Draft posts
      draft: true
      draft_on_serve: true
      draft_if_future_date: true
  - rss:
      match_path: "{{ blog_dir }}/.*"
      date_from_meta:
        as_creation: date
        as_update: date
      categories:
        - categories
        - tags
      feeds_filenames:
        rss_created: feed_rss_created.xml
        rss_updated: feed_rss_updated.xml
        json_created: feed_json_created.json
        json_updated: feed_json_updated.json
      use_git: false
      use_material_social_cards: true
      comments_path: "#__comments"
      use_material_blog: false
      pretty_print: true
      abstract_chars_count: 300
      abstract_delimiter: "<!-- more -->"
  - git-revision-date-localized:
      enable_creation_date: true
      type: timeago
  - minify:
      minify_html: true
      minify_js: true
      minify_css: true
      htmlmin_opts:
        remove_comments: true
      cache_safe: true

# Markdown extensions available for posts
# (This section is automatically sent to the writer agent)
markdown_extensions:
  # Code blocks and diagrams
  - pymdownx.highlight:
      anchor_linenums: true
      linenums: true
      line_spans: __span
      pygments_lang_class: true
  - pymdownx.superfences:
      custom_fences:
        - name: mermaid
          class: mermaid
          format: !!python/name:pymdownx.superfences.fence_code_format

  # Content enhancements
  - abbr
  - admonition
  - def_list
  - pymdownx.betterem:
      smart_enable: all
  - pymdownx.caret
  - pymdownx.details
  - footnotes
  - pymdownx.tasklist:
      custom_checkbox: true
  - pymdownx.emoji:
      emoji_index: !!python/name:material.extensions.emoji.twemoji
      emoji_generator: !!python/name:material.extensions.emoji.to_svg
  - pymdownx.smartsymbols
  - pymdownx.snippets:
      auto_append:
        - includes/abbreviations.md

  # Navigation and structure
  - toc:
      permalink: true
      toc_depth: 3
  - attr_list
  - tables
  - md_in_html

  # Math rendering
  - pymdownx.arithmatex:
      generic: true

  # Technical writing & formatting
  - pymdownx.inlinehilite
  - pymdownx.keys
  - pymdownx.mark
  - pymdownx.tilde
  - pymdownx.tabbed:
      alternate_style: true

validation:
  absolute_links: relative_to_docs
  unrecognized_links: warn

nav:
  - Home: index.md
  - Blog:
      - Latest: {{ blog_dir }}/index.md
      - Tags & Topics: {{ blog_dir }}/tags.md
      - Profiles: {{ blog_dir }}/profiles/index.md
  - Journal: journal/index.md
  - Resources:
      - Media: {{ media_dir }}/index.md
      - Feeds: feeds/index.md
      - About: about.md


# Egregora configuration lives in .egregora.toml at the site root
# (Separation allows supporting multiple rendering backends: MkDocs, Hugo, Astro, etc.)
extra:
  # Disable MkDocs generator notice
  generator: false
  # Add social links to the footer for a more professional look.
  # These will only appear if the corresponding variables are set in the user's config.
  {% if github_user or twitter_handle or linkedin_user %}
  social:
    {% if github_user %}
    - icon: fontawesome/brands/github
      link: https://github.com/{{ github_user }}
    {% endif %}
    {% if twitter_handle %}
    - icon: fontawesome/brands/x-twitter
      link: https://twitter.com/{{ twitter_handle }}
    {% endif %}
    {% if linkedin_user %}
    - icon: fontawesome/brands/linkedin
      link: https://linkedin.com/in/{{ linkedin_user }}
    {% endif %}
  {% endif %}

