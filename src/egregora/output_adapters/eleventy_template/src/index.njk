layout: base.njk
title: Home
---

<h1>Recent Posts</h1>

{% if collections.posts.length > 0 %}
<ul style="list-style: none; padding: 0;">
  {% for post in collections.posts | limit(10) %}
  <li style="margin-bottom: 1.5rem;">
    <h2 style="margin-bottom: 0.25rem;">
      <a href="/posts/{{ post.slug }}/" style="text-decoration: none; color: #0066cc;">
        {{ post.title }}
      </a>
    </h2>
    <time style="color: #666; font-size: 0.9rem;">{{ post.created_at }}</time>
    {% if post.metadata.summary %}
    <p style="margin-top: 0.5rem; color: #555;">{{ post.metadata.summary }}</p>
    {% endif %}
  </li>
  {% endfor %}
</ul>
{% else %}
<p>No posts yet. Run <code>egregora write</code> to generate content.</p>
{% endif %}

<h2 style="margin-top: 3rem;">Stats</h2>
<ul>
  <li>{{ collections.posts.length }} posts</li>
  <li>{{ collections.profiles.length }} profiles</li>
  <li>{{ collections.journals.length }} journal entries</li>
</ul>
