site_name: {{ site_name }}
site_description: Collective consciousness journal - {{ site_name }}
docs_dir: {{ docs_dir }}

theme:
  name: material
  language: en
  palette:
    - media: '(prefers-color-scheme: light)'
      scheme: default
      primary: indigo
      accent: blue
      toggle:
        icon: material/brightness-7
        name: Switch to dark mode
    - media: '(prefers-color-scheme: dark)'
      scheme: slate
      primary: indigo
      accent: blue
      toggle:
        icon: material/brightness-4
        name: Switch to light mode
  features:
    - navigation.instant
    - navigation.tracking
    - navigation.tabs
    - navigation.sections
    - navigation.indexes
    - navigation.top
    - search.highlight
    - search.share
    - content.code.copy

plugins:
  - search:
      lang: en
  - blog:
      blog_dir: {{ blog_dir }}
      blog_toc: true
      post_date_format: long
      post_url_date_format: yyyy/MM/dd
      post_url_format: '{date}/{slug}'
      pagination_per_page: 10
  - mkdocstrings:
      handlers:
        python:
          paths: [src]
          options:
            docstring_style: google
            docstring_section_style: table
            show_source: true
            show_root_heading: true
            show_root_full_path: false
            show_symbol_type_heading: true
            show_symbol_type_toc: true
            members_order: source
            group_by_category: true
            show_category_heading: true
            show_if_no_docstring: false
            inherited_members: false
            filters: ["!^_"]

# Markdown extensions available for posts
# (This section is automatically sent to the writer agent)
markdown_extensions:
  # Code blocks and diagrams
  - pymdownx.highlight:
      anchor_linenums: true
  - pymdownx.superfences:
      custom_fences:
        - name: mermaid
          class: mermaid
          format: !!python/name:pymdownx.superfences.fence_code_format

  # Content enhancements
  - admonition
  - pymdownx.details
  - footnotes
  - pymdownx.tasklist:
      custom_checkbox: true
  - pymdownx.emoji:
      emoji_index: !!python/name:material.extensions.emoji.twemoji
      emoji_generator: !!python/name:material.extensions.emoji.to_svg

  # Navigation and structure
  - toc:
      permalink: true
  - attr_list
  - tables

  # Optional: Uncomment if you need math rendering
  # - pymdownx.arithmatex:
  #     generic: true

nav:
  - Home: index.md
  - Blog: {{ blog_dir }}/index.md
  - Profiles: profiles/index.md
  - About: about.md
  - API Reference:
      - Overview: api/index.md
      - Core:
          - Database Schema: api/core/database_schema.md
      - Ingestion:
          - Parser: api/ingestion/parser.md
      - Privacy:
          - Anonymizer: api/privacy/anonymizer.md
          - Detector: api/privacy/detector.md
      - Augmentation:
          - Enrichment: api/augmentation/enrichment.md
      - Generation:
          - Writer: api/generation/writer.md
          - Editor: api/generation/editor.md
      - Knowledge:
          - RAG: api/knowledge/rag.md
          - Ranking: api/knowledge/ranking.md
      - Publication:
          - Site Scaffolding: api/publication/site.md
      - Orchestration:
          - CLI: api/orchestration/cli.md
          - Pipeline: api/orchestration/pipeline.md
      - Utils:
          - Gemini Client: api/utils/genai.md
          - Batch Processing: api/utils/batch.md
          - Caching: api/utils/cache.md

# Egregora configuration
extra:
  egregora:
    # Custom instructions for the writer agent (optional)
    # Uncomment and customize as needed:
    # writer_prompt: |
    #   Write analytical posts in the style of Scott Alexander / LessWrong.
    #   Focus on capturing narrative threads and preserving complexity.

    # RAG settings
    rag:
      enabled: true
      top_k: 5
      min_similarity: 0.7

    # Profile settings
    profiles:
      top_authors_count: 20
      include_in_context: true

  # Disable MkDocs generator notice
  generator: false
