# Exemplo de configuraÃ§Ã£o para o Egregora.
# Copie este arquivo para `egregora.toml` e ajuste conforme seu ambiente.

[directories]
# DiretÃ³rio com os exports .zip do WhatsApp.
zips_dir = "data/whatsapp_zips"
# Raiz onde as postagens (daily) serÃ£o salvas.
posts_dir = "data"

[pipeline]
model = "gemini-flash-lite-latest"
timezone = "America/Porto_Velho"
post_language = "pt-BR"
default_post_author = "egregora"
# media_url_prefix = "https://exemplo.com/media"
skip_real_if_in_virtual = true

[llm]
safety_threshold = "BLOCK_NONE"
thinking_budget = -1

[system_classifier]
enabled = true
model = "gemini-flash-lite-latest"
max_llm_calls = 200
token_budget = 20000
retry_attempts = 2

[enrichment]
enabled = true
enrichment_model = "gemini-flash-latest"
max_links = 50
relevance_threshold = 3
context_window = 3
max_concurrent_analyses = 5
max_total_enrichment_time = 120.0
metrics_csv_path = "metrics/enrichment_run.csv"

[cache]
enabled = true
cache_dir = "cache"
auto_cleanup_days = 90
max_disk_mb = 100

[anonymization]
enabled = true
output_format = "human"

[profiles]
enabled = true
profiles_dir = "data/profiles"
docs_dir = "data/profiles/docs"
min_messages = 2
min_words_per_message = 15
history_days = 5
max_profiles_per_run = 3
decision_model = "models/gemini-flash-latest"
rewrite_model = "models/gemini-flash-latest"



